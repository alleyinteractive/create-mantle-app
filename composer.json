{
    "name": "alleyinteractive/create-mantle-app",
    "type": "project",
    "description": "Mantle Application Scaffold",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley",
            "email": "info@alley.co"
        }
    ],
    "require": {
        "alleyinteractive/composer-wordpress-autoloader": "^0.2",
        "alleyinteractive/mantle-framework": "dev-main",
        "fakerphp/faker": "^1.9"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^0.3",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^8.5.8 || ^9.3.3"
    },
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "apcu-autoloader": true,
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ]
        },
        "wordpress-autoloader": {
            "autoload": {
                "App\\": "mu-plugins/mantle-app/app/",
                "App\\Database\\": "mu-plugins/mantle-app/database/"
            },
            "autoload-dev": {
                "App\\Tests\\": "mu-plugins/mantle-app/tests/"
            }
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "scripts": {
        "phpcs": "phpcs --standard=./phpcs.xml .",
        "phpunit": "cd mu-plugins/mantle-app && phpunit"
    }
}
